<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.HomeActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo"
        android:id="@+id/ivlogo"
        />

    <ImageView
        android:layout_marginTop="80dp"
        android:layout_below="@+id/ivlogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_baseline_fingerprint_24"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:id="@+id/ivFIngerPrint"
        android:backgroundTint="#000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan Finger to Continue"
        android:layout_below="@id/ivFIngerPrint"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/tvFingerPrintTitle"
        android:textColor="@color/black"
        />



    <Button
        android:layout_marginTop="30dp"
        android:layout_below="@id/tvFingerPrintTitle"
        android:id="@+id/btnSnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:shadowColor="@android:color/transparent"
        android:padding="15dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/shape_edit_text"
        android:visibility="gone"
        android:textColor="@color/grey"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/backgroundbottom"
        android:scaleType="fitXY"
        />

    </RelativeLayout>
